<% if !current_user.stocks.blank? %>
	<div class="row">
		<div class="col-9">
			<table class="table table-bordered ">
				   <thead>
				    <tr>
				      <th scope="col">Ticker</th>
				      <th scope="col">Name</th>
				      <th scope="col">Price</th>
				      <th scope="col">Actions</th>
				    </tr>
				  </thead>
			  <tbody>
			    <% @tracked_stocks.each do |stock| %>
			    	<tr>
				      <th scope="row"><%= stock.ticker%></th>
				      <td><%= stock.name %></td>
				      <td><%= stock.last_price%></td>
				      <td><%= button_to "Remove Stock", user_stock_path(stock), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-warning" %></td>
			    	</tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
<% end %>