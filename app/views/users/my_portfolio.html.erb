<h1 class = "mb-4">My Portfolio</h1>
<div class="search-area">
	<h3>Search Stocks</h3>
	<%= form_tag search_stock_path, method: :get do%>
		<div class="form-group row form-icons">
			<div class="col-sm-9 no-right-padding">
				<!-- Text field tag needs a name, hence :stock -->
				<!-- Simultaneously, it works with the params hash, but we must SPECIFY what is being sent -->
				<!-- What we want is the value we are sending  -->
				<%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker Symbol", autofocus: true, class: "form-control form-control-lg" %>
			</div>
			<div class="col-sm-3 no-left-padding">
				<%= button_tag type: :submit, class: "btn btn-success" do %>
					<%= fa_icon 'search 2x'%>
				<% end %>
			</div>
		</div>

	<% end %>
	<% if @stock%>
		<div class="card card-header results-block">
			<strong>Symbol: </strong> <%= @stock.ticker %>
			<strong>Name: </strong> <%= @stock.name %>
			<strong>Price:</strong> <%= @stock.last_price %>
		</div>
	<% end %>
</div>